#!/usr/bin/env bash

cd `dirname "$0"`/..

# Aggregate test exit codes.
exit_code=0
trap '(( exit_code |= $? ))' ERR

cargo fmt --all -- --write-mode=diff
cargo test
cargo coverage
# cargo coveralls --exclude-pattern tests/ --all

# Stop aggregating test exit codes.
trap - ERR

if [ $exit_code -eq 0 ]
then
    echo "SUCCESS: ALL TESTS PASSED."
else
    echo "ERROR: SOME TESTS FAILED."
fi
exit $exit_code
